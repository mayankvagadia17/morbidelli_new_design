<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/vehicle_card_background"
    android:padding="16dp"
    android:layout_margin="2dp">

    <!-- Vehicle Image -->
    <ImageView
        android:id="@+id/iv_vehicle_image"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="12dp"
        android:contentDescription="Vehicle image"
        android:scaleType="centerInside" />

    <!-- Vehicle Name -->
    <TextView
        android:id="@+id/tv_vehicle_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="N300"
        android:textColor="@color/vehicle_text"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="start"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:id="@+id/btn_view_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View details"
            android:textColor="@color/details_text"
            android:textSize="12sp"
            android:layout_marginEnd="4dp" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_right"
            app:tint="@color/black" />

    </LinearLayout>

</LinearLayout>
