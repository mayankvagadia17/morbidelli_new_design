<?xml version="1.0" encoding="utf-8"?>
<!-- White modal card exactly matching the screenshot -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="12dp"
    app:cardElevation="8dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Vehicle Image -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="20dp">

                <ImageView
                    android:id="@+id/iv_vehicle_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerInside"
                    android:src="@drawable/n300_green"
                    android:layout_gravity="center" />

            </FrameLayout>

            <!-- Content Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="24dp"
                android:paddingTop="16dp">

                <!-- Vehicle Title -->
                <TextView
                    android:id="@+id/tv_vehicle_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N300"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:fontFamily="sans-serif"
                    android:layout_marginBottom="4dp" />

                <!-- Vehicle Subtitle -->
                <TextView
                    android:id="@+id/tv_vehicle_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Morbidelli N300: Ride Art, Master Roads"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:fontFamily="sans-serif"
                    android:layout_marginBottom="4dp" />

                <!-- Vehicle Description -->
                <TextView
                    android:id="@+id/tv_vehicle_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="The Morbidelli N300 is more than a motorcycle; it's a statement of style and performance."
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:fontFamily="sans-serif"
                    android:lineSpacingExtra="2dp"
                    android:layout_marginBottom="16dp" />

                <!-- Specifications Table exactly as in screenshot -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp">

                    <!-- Row 1: Price from and N/A -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="8dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Price from"
                                android:textSize="10sp"
                                android:textColor="#999999"
                                android:fontFamily="sans-serif" />

                            <TextView
                                android:id="@+id/tv_price_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="N/A"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/black"
                                android:fontFamily="sans-serif"
                                android:layout_marginTop="2dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="N15"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/black"
                                android:fontFamily="sans-serif" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Row 2: Power specification -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="8dp">

                        <TextView
                            android:id="@+id/tv_power_value"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="29.5/10000"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:fontFamily="sans-serif" />

                        <TextView
                            android:id="@+id/tv_max_torque_value"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="26.4NÂ·m/6000 r/min"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:fontFamily="sans-serif" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Select Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_select_vehicle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="SELECT THIS MODEL"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:background="#00BFFF"
            android:fontFamily="sans-serif-medium" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
