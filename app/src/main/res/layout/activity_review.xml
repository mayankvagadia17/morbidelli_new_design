<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="@color/white">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back_white"
            android:background="@drawable/bg_icon_rounded"
            android:padding="6dp"
            android:contentDescription="Back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Leave a Review"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="start"
            android:layout_marginStart="16dp" />

        <View
            android:layout_width="24dp"
            android:layout_height="24dp" />

    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray" />

    <!-- Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Booking Info Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_review_card"
                android:padding="20dp"
                android:layout_marginBottom="32dp"
                android:elevation="2dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Booking #12345"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Morbidelli X1"
                    android:textColor="@color/gray"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Completed on 25 Sep 2024"
                    android:textColor="@color/gray"
                    android:textSize="16sp" />

            </LinearLayout>

            <!-- Rating Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="How was your ride?"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="20dp" />

            <!-- Star Rating -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/star_1"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_star_empty"
                    android:layout_marginEnd="12dp"
                    android:clickable="true"
                    android:focusable="true" />

                <ImageView
                    android:id="@+id/star_2"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_star_empty"
                    android:layout_marginEnd="12dp"
                    android:clickable="true"
                    android:focusable="true" />

                <ImageView
                    android:id="@+id/star_3"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_star_empty"
                    android:layout_marginEnd="12dp"
                    android:clickable="true"
                    android:focusable="true" />

                <ImageView
                    android:id="@+id/star_4"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_star_empty"
                    android:layout_marginEnd="12dp"
                    android:clickable="true"
                    android:focusable="true" />

                <ImageView
                    android:id="@+id/star_5"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_star_empty"
                    android:clickable="true"
                    android:focusable="true" />

            </LinearLayout>

            <!-- Rating Description -->
            <TextView
                android:id="@+id/tv_rating_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tap a star to rate"
                android:textColor="@color/gray"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginBottom="32dp" />

            <!-- Review Form -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tell us more about your experience"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <EditText
                android:id="@+id/et_review"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:background="@drawable/bg_edit_text"
                android:padding="20dp"
                android:hint="Share your experience with other riders..."
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:textSize="16sp"
                android:gravity="top|start"
                android:inputType="textMultiLine"
                android:maxLines="6"
                android:scrollbars="vertical" />

            <!-- Character Count -->
            <TextView
                android:id="@+id/tv_character_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0/500"
                android:textColor="@color/gray"
                android:textSize="14sp"
                android:gravity="end"
                android:layout_marginTop="8dp" />

        </LinearLayout>

    </ScrollView>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="24dp"
        android:background="@color/white">

        <Button
            android:id="@+id/btn_skip"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:text="SKIP"
            android:textColor="@color/gray"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/bg_button_skip"
            android:layout_marginEnd="12dp" />

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:text="SUBMIT REVIEW"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/bg_button_submit"
            android:layout_marginStart="12dp" />

    </LinearLayout>

</LinearLayout>
