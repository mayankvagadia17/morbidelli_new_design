<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_feedback_bottom_sheet"
    android:maxHeight="700dp">

    <!-- Bottom Sheet Handle -->
    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bg_bottom_sheet_handle" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

        <!-- Header with close button and title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp">

            <ImageView
                android:id="@+id/btn_close"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_dialog_close"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:padding="4dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/write_review"
                android:textColor="@color/feedback_text_primary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center" />

            <!-- Invisible placeholder for centering -->
            <View
                android:layout_width="24dp"
                android:layout_height="24dp" />

        </LinearLayout>

        <!-- Main Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/please_rate_test_ride"
            android:textColor="@color/feedback_text_primary"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/share_experience_description"
            android:textColor="@color/feedback_text_secondary"
            android:textSize="14sp"
            android:lineSpacingExtra="2dp"
            android:layout_marginBottom="32dp" />

        <!-- Rating Categories -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="32dp">

            <!-- Price/Quality Ratio -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="24dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_price_quality_ratio"
                    android:layout_marginEnd="16dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/price_quality_ratio"
                        android:textColor="@color/feedback_text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/price_quality_question"
                        android:textColor="@color/feedback_text_secondary"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_price_star_1"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_star_empty"
                            android:layout_marginEnd="4dp"
                            android:clickable="true"
                            android:focusable="true" />

                        <ImageView
                            android:id="@+id/iv_price_star_2"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_star_empty"
                            android:layout_marginEnd="4dp"
                            android:clickable="true"
                            android:focusable="true" />

                        <ImageView
                            android:id="@+id/iv_price_star_3"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_star_empty"
                            android:layout_marginEnd="4dp"
                            android:clickable="true"
                            android:focusable="true" />

                        <ImageView
                            android:id="@+id/iv_price_star_4"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_star_empty"
                            android:layout_marginEnd="4dp"
                            android:clickable="true"
                            android:focusable="true" />

                        <ImageView
                            android:id="@+id/iv_price_star_5"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_star_empty"
                            android:clickable="true"
                            android:focusable="true" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Dealer Communication -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="24dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_dealer_communication"
                    android:layout_marginEnd="16dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dealer_communication"
                        android:textColor="@color/feedback_text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dealer_communication_question"
                        android:textColor="@color/feedback_text_secondary"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_dealer_star_1"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_star_empty"
                            android:layout_marginEnd="4dp"
                            android:clickable="true"
                            android:focusable="true" />

                        <ImageView
                            android:id="@+id/iv_dealer_star_2"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_star_empty"
                            android:layout_marginEnd="4dp"
                            android:clickable="true"
                            android:focusable="true" />

                        <ImageView
                            android:id="@+id/iv_dealer_star_3"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_star_empty"
                            android:layout_marginEnd="4dp"
                            android:clickable="true"
                            android:focusable="true" />

                        <ImageView
                            android:id="@+id/iv_dealer_star_4"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_star_empty"
                            android:layout_marginEnd="4dp"
                            android:clickable="true"
                            android:focusable="true" />

                        <ImageView
                            android:id="@+id/iv_dealer_star_5"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_star_empty"
                            android:clickable="true"
                            android:focusable="true" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Motorbike Condition -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="24dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_motorbike_condition"
                    android:layout_marginEnd="16dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/motorbike_condition"
                        android:textColor="@color/feedback_text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/motorbike_condition_question"
                        android:textColor="@color/feedback_text_secondary"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_motorbike_star_1"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_star_empty"
                            android:layout_marginEnd="4dp"
                            android:clickable="true"
                            android:focusable="true" />

                        <ImageView
                            android:id="@+id/iv_motorbike_star_2"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_star_empty"
                            android:layout_marginEnd="4dp"
                            android:clickable="true"
                            android:focusable="true" />

                        <ImageView
                            android:id="@+id/iv_motorbike_star_3"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_star_empty"
                            android:layout_marginEnd="4dp"
                            android:clickable="true"
                            android:focusable="true" />

                        <ImageView
                            android:id="@+id/iv_motorbike_star_4"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_star_empty"
                            android:layout_marginEnd="4dp"
                            android:clickable="true"
                            android:focusable="true" />

                        <ImageView
                            android:id="@+id/iv_motorbike_star_5"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_star_empty"
                            android:clickable="true"
                            android:focusable="true" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Punctuality -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="24dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_punctuality"
                    android:layout_marginEnd="16dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/punctuality"
                        android:textColor="@color/feedback_text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/punctuality_question"
                        android:textColor="@color/feedback_text_secondary"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_punctuality_star_1"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_star_empty"
                            android:layout_marginEnd="4dp"
                            android:clickable="true"
                            android:focusable="true" />

                        <ImageView
                            android:id="@+id/iv_punctuality_star_2"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_star_empty"
                            android:layout_marginEnd="4dp"
                            android:clickable="true"
                            android:focusable="true" />

                        <ImageView
                            android:id="@+id/iv_punctuality_star_3"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_star_empty"
                            android:layout_marginEnd="4dp"
                            android:clickable="true"
                            android:focusable="true" />

                        <ImageView
                            android:id="@+id/iv_punctuality_star_4"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_star_empty"
                            android:layout_marginEnd="4dp"
                            android:clickable="true"
                            android:focusable="true" />

                        <ImageView
                            android:id="@+id/iv_punctuality_star_5"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_star_empty"
                            android:clickable="true"
                            android:focusable="true" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Test Ride Satisfaction -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="32dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_test_ride_satisfaction"
                    android:layout_marginEnd="16dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/test_ride_satisfaction"
                        android:textColor="@color/feedback_text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/test_ride_satisfaction_question"
                        android:textColor="@color/feedback_text_secondary"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_satisfaction_star_1"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_star_empty"
                            android:layout_marginEnd="4dp"
                            android:clickable="true"
                            android:focusable="true" />

                        <ImageView
                            android:id="@+id/iv_satisfaction_star_2"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_star_empty"
                            android:layout_marginEnd="4dp"
                            android:clickable="true"
                            android:focusable="true" />

                        <ImageView
                            android:id="@+id/iv_satisfaction_star_3"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_star_empty"
                            android:layout_marginEnd="4dp"
                            android:clickable="true"
                            android:focusable="true" />

                        <ImageView
                            android:id="@+id/iv_satisfaction_star_4"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_star_empty"
                            android:layout_marginEnd="4dp"
                            android:clickable="true"
                            android:focusable="true" />

                        <ImageView
                            android:id="@+id/iv_satisfaction_star_5"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_star_empty"
                            android:clickable="true"
                            android:focusable="true" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Back Button -->
            <Button
                android:id="@+id/btn_back"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="@string/back_button"
                android:textColor="@color/feedback_button_text_secondary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/bg_feedback_button_secondary"
                android:stateListAnimator="@null"
                android:elevation="0dp" />

            <!-- Submit Button -->
            <Button
                android:id="@+id/btn_submit"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="@string/submit_button"
                android:textColor="@color/feedback_button_text_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/bg_feedback_button_primary"
                android:stateListAnimator="@null"
                android:elevation="0dp" />

        </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
