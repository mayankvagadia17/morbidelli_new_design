<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_feedback_bottom_sheet"
    android:maxHeight="600dp">

    <!-- Bottom Sheet Handle -->
    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bg_bottom_sheet_handle" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

        <!-- Header with close button and title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp">

            <ImageView
                android:id="@+id/btn_close"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_dialog_close"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:padding="4dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/write_review"
                android:textColor="@color/feedback_text_primary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center" />

            <!-- Invisible placeholder for centering -->
            <View
                android:layout_width="24dp"
                android:layout_height="24dp" />

        </LinearLayout>

        <!-- Main Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/test_ride_feedback"
            android:textColor="@color/feedback_text_primary"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/share_experience_description"
            android:textColor="@color/feedback_text_secondary"
            android:textSize="14sp"
            android:lineSpacingExtra="2dp"
            android:layout_marginBottom="24dp" />

        <!-- First Name Input -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/first_name"
            android:textColor="@color/feedback_text_light"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/et_first_name"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_feedback_edit_text"
            android:hint="@string/type_first_name"
            android:textColor="@color/feedback_text_primary"
            android:textColorHint="@color/feedback_text_light"
            android:textSize="14sp"
            android:padding="16dp"
            android:inputType="textPersonName"
            android:layout_marginBottom="16dp" />

        <!-- Last Name Input -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/last_name"
            android:textColor="@color/feedback_text_light"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/et_last_name"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_feedback_edit_text"
            android:hint="@string/type_last_name"
            android:textColor="@color/feedback_text_primary"
            android:textColorHint="@color/feedback_text_light"
            android:textSize="14sp"
            android:padding="16dp"
            android:inputType="textPersonName"
            android:layout_marginBottom="16dp" />

        <!-- Image Upload Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/image"
            android:textColor="@color/feedback_text_primary"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <!-- Upload Area -->
        <LinearLayout
            android:id="@+id/ll_upload_area"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/frame_upload_image"
                android:scaleType="fitCenter"/>

        </LinearLayout>

        <!-- Uploaded Images Container -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_uploaded_images"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:visibility="gone" />

        <!-- Feedback Text Area -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/feedback"
            android:textColor="@color/feedback_text_light"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/et_feedback"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@drawable/bg_feedback_edit_text"
            android:hint="@string/feedback_hint"
            android:textColor="@color/feedback_text_primary"
            android:textColorHint="@color/feedback_text_light"
            android:textSize="14sp"
            android:padding="16dp"
            android:gravity="top|start"
            android:inputType="textMultiLine"
            android:maxLines="4"
            android:scrollbars="vertical"
            android:layout_marginBottom="24dp" />

            <!-- Continue Button -->
            <Button
                android:id="@+id/btn_continue"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="@string/continue_button"
                android:textColor="@color/feedback_button_text_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/bg_feedback_button_primary"
                android:stateListAnimator="@null"
                android:elevation="0dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
