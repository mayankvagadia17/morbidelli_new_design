<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <!-- Unread indicator dot -->
    <View
        android:id="@+id/indicator_dot"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/notification_dot_background"
        android:visibility="gone" />

    <!-- Content area -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Booking Confirmed"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <!-- Message -->
        <TextView
            android:id="@+id/tv_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Yamaha MT-07 rental for tomorrow has been confirmed. Pickup time: 9:00 AM"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:lineSpacingExtra="2dp"
            android:layout_marginBottom="8dp" />

        <!-- Action link -->
        <TextView
            android:id="@+id/tv_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View booking details"
            android:textColor="@color/blue"
            android:textSize="14sp"
            android:background="@drawable/underline_background"
            android:paddingBottom="2dp"
            android:layout_marginBottom="8dp"
            android:visibility="gone" />

        <!-- Timestamp -->
        <TextView
            android:id="@+id/tv_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 hours ago"
            android:textColor="@color/text_light"
            android:textSize="12sp" />

    </LinearLayout>

</LinearLayout>
