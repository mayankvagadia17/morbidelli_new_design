<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Date Separator -->
    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Today"
        android:textColor="@color/gray"
        android:textSize="12sp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:visibility="gone" />

    <!-- Message Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="bottom">

        <!-- Sender Message (Left) -->
        <LinearLayout
            android:id="@+id/ll_sender_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="start"
            android:visibility="gone">

            <!-- Message Bubble -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_message_sender"
                android:padding="12dp"
                android:maxWidth="280dp">

                <!-- Quoted Message (if any) -->
                <LinearLayout
                    android:id="@+id/ll_quoted_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_quoted_message"
                    android:padding="8dp"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone">

                    <!-- Quote Indicator -->
                    <View
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:background="@color/blue_primary"
                        android:layout_marginEnd="8dp" />

                    <!-- Quote Content -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_quoted_sender"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="You"
                            android:textColor="@color/blue_primary"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_quoted_message"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="My message goes here..."
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Message Text -->
                <TextView
                    android:id="@+id/tv_message_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Remarkable service offered."
                    android:textColor="@color/black"
                    android:textSize="14sp" />

            </LinearLayout>

            <!-- Time and Status -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/tv_message_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11:40 AM"
                    android:textColor="@color/gray"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/iv_message_status"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_check_blue"
                    android:layout_marginStart="4dp"
                    android:contentDescription="Message Status" />

            </LinearLayout>

        </LinearLayout>

        <!-- Receiver Message (Right) -->
        <LinearLayout
            android:id="@+id/ll_receiver_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="end"
            android:visibility="gone">

            <!-- Message Bubble -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_message_receiver"
                android:padding="12dp"
                android:maxWidth="280dp">

                <!-- Message Text -->
                <TextView
                    android:id="@+id/tv_receiver_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My message goes here... Example text goes like this test text here"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

            </LinearLayout>

            <!-- Time and Status -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/tv_receiver_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:15 AM"
                    android:textColor="@color/gray"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/iv_receiver_status"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_check_blue"
                    android:layout_marginStart="4dp"
                    android:contentDescription="Message Status" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
