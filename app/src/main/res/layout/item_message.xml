<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="@color/light_gray"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:clickable="true"
    android:focusable="true">

    <!-- Vehicle Thumbnail -->
    <ImageView
        android:id="@+id/iv_vehicle_thumbnail"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_scooter_placeholder"
        android:layout_marginEnd="16dp"
        android:scaleType="centerCrop"
        android:background="@drawable/vehicle_thumbnail_background" />

    <!-- Content Area -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Date and Time Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Oct 04, 2023"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="16dp"
                android:background="@color/divider"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:00 - 10:30 AM"
                android:textColor="@color/black"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Vehicle Info -->
        <TextView
            android:id="@+id/tv_vehicle_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="C1002V - Naked - #TR-48291"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <!-- Divider Line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"
            android:layout_marginBottom="8dp" />

        <!-- Dealer Info and Action -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Dealer Logo and Name -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_dealer_logo"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_oakley_logo"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tv_dealer_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Oakley Motorcycles"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

            </LinearLayout>

            <!-- Action Button -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="?android:attr/selectableItemBackground"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true">

                <!-- Unread Indicator -->
                <View
                    android:id="@+id/indicator_dot"
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:background="@drawable/message_dot_background"
                    android:layout_marginEnd="8dp"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Go to chat"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_chevron_right"
                    android:layout_marginStart="4dp"
                    android:tint="@color/black" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>