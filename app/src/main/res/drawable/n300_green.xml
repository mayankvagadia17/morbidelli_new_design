<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Car body background -->
    <item
        android:left="10dp"
        android:top="20dp"
        android:right="10dp"
        android:bottom="40dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/oakley_green" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    
    <!-- Car window -->
    <item
        android:left="20dp"
        android:top="25dp"
        android:right="20dp"
        android:bottom="65dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    
    <!-- Left wheel -->
    <item
        android:left="25dp"
        android:top="80dp"
        android:right="135dp"
        android:bottom="65dp">
        <shape android:shape="oval">
            <solid android:color="@color/text_dark" />
        </shape>
    </item>
    
    <!-- Right wheel -->
    <item
        android:left="115dp"
        android:top="80dp"
        android:right="45dp"
        android:bottom="65dp">
        <shape android:shape="oval">
            <solid android:color="@color/text_dark" />
        </shape>
    </item>
    
</layer-list>
