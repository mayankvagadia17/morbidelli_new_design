<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Car body background -->
    <item
        android:left="20dp"
        android:top="30dp"
        android:right="20dp"
        android:bottom="20dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/primary_cyan" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    
    <!-- Car window -->
    <item
        android:left="30dp"
        android:top="35dp"
        android:right="30dp"
        android:bottom="50dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    
    <!-- Left wheel -->
    <item
        android:left="35dp"
        android:top="70dp"
        android:right="145dp"
        android:bottom="55dp">
        <shape android:shape="oval">
            <solid android:color="@color/text_dark" />
        </shape>
    </item>
    
    <!-- Right wheel -->
    <item
        android:left="125dp"
        android:top="70dp"
        android:right="55dp"
        android:bottom="55dp">
        <shape android:shape="oval">
            <solid android:color="@color/text_dark" />
        </shape>
    </item>
    
</layer-list>
